// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id
  name      String
  profileId String?
  profile   Profile? @relation(fields: [profileId], references: [id])
}

model Profile {
  id          String  @id
  description String?
  age         Int
  User        User[]
}
